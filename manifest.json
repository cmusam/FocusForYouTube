{
  "name": "Focus for YouTube",
  "description": "Focus on your video. Hide everything else.",
  "version": "0.1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "images/i32.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    "images/*.png",
    "css/*.css",
    "scripts/*.js"
  ],
  "icons": {
    "16": "images/i16.png",
    "32": "images/i32.png",
    "48": "images/i48.png",
    "128": "images/i128.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "scripts/content.js"
      ]
    }
  ]
}
